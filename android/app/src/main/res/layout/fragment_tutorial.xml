<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:id="@+id/constraintLayout"
        android:layout_height="match_parent"
        android:background="@color/activity_background"
        tools:context=".feature.tutorial.TutorialFragment">

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/tutorial_viewpager_tutorial"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/tutorial_btn_next"
            app:layout_constraintTop_toBottomOf="@+id/tutorial_layout_indicators" />

        <TextView
            android:id="@+id/tutorial_tv_skip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:text="@string/tutorial_skip"
            android:textColor="@color/tutorial_point"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tutorial_layout_indicators" />

        <LinearLayout
            android:id="@+id/tutorial_layout_indicators"
            android:layout_width="0dp"
            android:layout_marginTop="16dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="15dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tutorial_btn_next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_gradient_blue_radius"
            android:padding="20dp"
            android:text="@string/tutorial_next"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="@color/tutorial_point"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>