<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.text.TextUtils" />

        <import type="android.view.View" />

        <variable
            name="commentViewModel"
            type="com.digginroom.digginroom.feature.room.customview.roominfoview.comment.CommentViewModel" />

        <variable
            name="adapter"
            type="com.digginroom.digginroom.feature.room.customview.roominfoview.comment.adapter.CommentAdapter" />

        <variable
            name="commentEventListener"
            type="com.digginroom.digginroom.feature.room.customview.roominfoview.comment.dialog.listener.CommentEventListener" />

        <variable
            name="requestResultListener"
            type="com.digginroom.digginroom.feature.room.customview.roominfoview.comment.dialog.listener.result.RequestResultListener" />

        <variable
            name="showMenuListener"
            type="com.digginroom.digginroom.feature.room.customview.roominfoview.comment.dialog.listener.ShowCommentMenuListener" />

        <variable
            name="selectedCommentId"
            type="long" />

        <variable
            name="selectedPosition"
            type="int" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:requestResultListener="@{requestResultListener}"
        app:commentRequestState="@{commentViewModel.commentRequestState}"
        app:onShowMessage="@{commentViewModel::stopMessage}">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView_comment"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="16dp"
            android:adapter="@{adapter}"
            android:orientation="vertical"
            android:paddingTop="8dp"
            android:visibility="@{(commentViewModel.comments.size() > 0) ? View.VISIBLE : View.GONE}"
            app:comments="@{commentViewModel.comments}"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toTopOf="@+id/editText_comment"
            app:layout_constraintDimensionRatio="W, 10:9"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:onMenuClick="@{showMenuListener}" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:text="@string/dialog_comment_empty_comment"
            android:visibility="@{(commentViewModel.comments.size() > 0) ? View.GONE : View.VISIBLE}"
            app:layout_constraintBottom_toTopOf="@+id/editText_comment"
            app:layout_constraintDimensionRatio="W, 10:9"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <View
            android:id="@+id/comment_layout_separator"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="16dp"
            android:background="#B9B9B9"
            app:layout_constraintBottom_toTopOf="@id/editText_comment" />

        <EditText
            android:id="@+id/editText_comment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="16dp"
            android:autofillHints="no"
            android:background="@drawable/bg_stroke_gray_radius_1dp"
            android:hint="@string/dialog_comment_input_comment"
            android:inputType="text"
            android:paddingHorizontal="16dp"
            android:paddingVertical="10dp"
            android:text="@={commentViewModel.writtenComment}"
            app:commentRequestState="@{commentViewModel.commentRequestState}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/button_send"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageButton
            android:id="@+id/button_send"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="10dp"
            android:background="?attr/selectableItemBackground"
            android:cropToPadding="true"
            android:enabled="@{!TextUtils.isEmpty(commentViewModel.writtenComment)}"
            android:padding="10dp"
            android:scaleType="centerInside"
            android:src="@drawable/send_button_selector"
            android:textColor="@color/white"
            app:clickListener="@{commentEventListener}"
            app:comment="@{commentViewModel.writtenComment}"
            app:commentState="@{commentViewModel.commentActionState}"
            app:layout_constraintBottom_toBottomOf="@+id/editText_comment"
            app:layout_constraintEnd_toEndOf="parent"
            app:selectedCommentId="@{selectedCommentId}"
            app:selectedPosition="@{selectedPosition}" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
