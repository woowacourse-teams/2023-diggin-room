<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="java.util.List" />

        <import type="com.digginroom.digginroom.model.CommentModel" />

        <variable
            name="room"
            type="com.digginroom.digginroom.model.RoomModel" />

        <variable
            name="showRoomInfoListener"
            type="com.digginroom.digginroom.feature.room.customview.roominfoview.ShowRoomInfoListener" />

        <variable
            name="roomNavigator"
            type="com.digginroom.digginroom.feature.room.customview.roominfoview.navigator.RoomNavigator" />

        <variable
            name="findCommentsListener"
            type="com.digginroom.digginroom.feature.room.RoomEventListener" />

        <variable
            name="comments"
            type="List&lt;CommentModel>" />

        <variable
            name="showCommentsListener"
            type="com.digginroom.digginroom.feature.room.customview.roominfoview.comment.dialog.listener.ShowCommentsListener" />

        <variable
            name="scrapCountFormatter"
            type="com.digginroom.digginroom.model.mapper.ScrapCountFormatter" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:paddingHorizontal="@dimen/scrap_horizontal_margin"
        android:paddingTop="@dimen/scrap_horizontal_margin"
        android:paddingBottom="@dimen/scrap_vertical_margin">

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/room_info_ib_scrap"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="?attr/selectableItemBackground"
            android:onClick="@{() -> roomNavigator.navigateToScrap()}"
            android:scaleType="centerInside"
            android:src="@drawable/cube_icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/room_info_iv_music"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="?attr/selectableItemBackground"
            android:scaleType="centerInside"
            android:src="@drawable/music_icon"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/room_info_tv_title_artist"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/scrap_horizontal_margin"
            android:layout_marginEnd="8dp"
            android:includeFontPadding="false"
            android:onClick="@{() -> showRoomInfoListener.show(room.track)}"
            android:text="@{@string/title_artist_format(room.track.title, room.track.artist)}"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/room_info_ib_info"
            app:layout_constraintStart_toEndOf="@id/room_info_iv_music" />

        <com.digginroom.digginroom.feature.room.customview.scraptoggle.ScrapToggle
            android:id="@id/room_info_scrap_toggle"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginBottom="6dp"
            android:scaleType="centerInside"
            app:increaseTouchRect="@{16}"
            app:isScrapped="@{room.isScrapped}"
            app:layout_constraintBottom_toTopOf="@+id/room_info_tv_scrap_count"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/room_info_tv_scrap_count"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_marginBottom="16dp"
            android:text="@{scrapCountFormatter.convert(room.scrapCount)}"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@id/room_info_ib_comment"
            app:layout_constraintEnd_toEndOf="@id/room_info_scrap_toggle"
            app:layout_constraintStart_toStartOf="@id/room_info_scrap_toggle" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/room_info_ib_comment"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginBottom="24dp"
            android:background="?attr/selectableItemBackground"
            android:onClick="@{() -> showCommentsListener.show(room.roomId)}"
            android:scaleType="centerInside"
            android:src="@drawable/comment_icon"
            app:increaseTouchRect="@{16}"
            app:layout_constraintBottom_toTopOf="@id/room_info_ib_info"
            app:layout_constraintEnd_toEndOf="parent" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/room_info_ib_info"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="?attr/selectableItemBackground"
            android:onClick="@{() -> showRoomInfoListener.show(room.track)}"
            android:scaleType="centerInside"
            android:src="@drawable/info_icon"
            app:increaseTouchRect="@{16}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
