<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.digginroom.digginroom.feature.room.customview.roompager.PagingOrientation" />

        <variable
            name="viewModel"
            type="com.digginroom.digginroom.feature.scrap.viewmodel.ScrapRoomViewModel" />

        <variable
            name="showRoomInfoListener"
            type="com.digginroom.digginroom.feature.room.customview.roominfoview.ShowRoomInfoListener" />

        <variable
            name="showCommentsListener"
            type="com.digginroom.digginroom.feature.room.customview.roominfoview.comment.dialog.listener.ShowCommentsListener" />

        <variable
            name="initialPosition"
            type="int" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".feature.scrap.activity.ScrapRoomActivity">

        <com.digginroom.digginroom.feature.room.customview.roompager.RoomPager
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:onDislike="@{viewModel::postDislike}"
            app:onRemoveScrap="@{viewModel::removeScrap}"
            app:onScrap="@{viewModel::postScrap}"
            app:onShowRoomInfoListener="@{showRoomInfoListener}"
            app:orientation="@{PagingOrientation.VERTICAL}"
            app:roomPosition="@{initialPosition}"
            app:rooms="@{viewModel.scrappedRooms}"
            app:setNextRoomLoadable="@{false}"
            app:showCommentsListener="@{showCommentsListener}" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
